root = true

[*]
charset=utf-8
end_of_line=lf
trim_trailing_whitespace=true
insert_final_newline=true
indent_style=space
indent_size=4

[{*.sht,*.html,*.shtm,*.shtml,*.htm,*.haml,*.slim}]
indent_style=space
indent_size=2

[{phpunit.xml.dist,*.jhm,*.xslt,*.xul,*.svg,*.rng,*.xsl,*.xsd,*.ant,*.tld,*.fxml,*.jrxml,*.xml,*.jnlp,*.wsdl}]
indent_style=space
indent_size=4

[{.babelrc,.stylelintrc,.eslintrc,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_style=space
indent_size=2

[*.css]
indent_style=tab
indent_size=2

[{*.applejs,*.js}]
indent_style=space
indent_size=2

[Rakefile]
indent_style=space
indent_size=2
trim_trailing_whitespace = true

[*.rb]
indent_style=space
indent_size=2
trim_trailing_whitespace = true
